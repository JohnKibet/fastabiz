@page "/"
@layout PublicLayout
@using logistics_frontend.Pages.Shared.Components

@code {
    private bool menuOpen = false;

    private void ToggleMenu()
    {
        menuOpen = !menuOpen;
    }
}

<!-- Navbar -->
<nav class="fixed top-0 left-0 right-0 z-50 bg-white shadow-md">
    <div class="flex justify-between items-center px-6 py-4 max-w-7xl mx-auto">
        <!-- Logo -->
        <div class="flex items-center space-x-2">
            <img src="/Images/logo.png" alt="logo" class="h-8 w-8">
            <h1 class="font-bold text-2xl px-4 text-black">FastaBiz</h1>
        </div>

        <!-- Desktop Nav -->
        <div class="hidden md:flex items-center space-x-6">
            <a href="#hero" class="hover:text-blue-600 font-semibold transition">Home</a>
            <a href="#get-started" class="hover:text-blue-600 font-semibold transition">Get Started</a>
            <a href="#features" class="hover:text-blue-600 font-semibold transition">Features</a>
            <a href="#discover" class="hover:text-blue-600 font-semibold transition">Discover</a>
            <a href="#about" class="hover:text-blue-600 font-semibold transition">About</a>
            <Button href="/auth/login" Color="green">Login</Button>
            <Button href="/auth/register" Color="blue">Sign Up</Button>
        </div>

        <!-- Mobile Menu Button -->
        <button class="md:hidden focus:outline-none" @onclick="ToggleMenu">
            <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
    </div>

    <!-- Mobile Nav Links -->
    <div class="@((menuOpen ? "block" : "hidden")) md:hidden px-6 pb-4 transition-all duration-300 ease-in-out">
        <a href="#hero" class="block py-2 text-gray-700 hover:text-blue-600 font-semibold">Home</a>
        <a href="#get-started" class="block py-2 text-gray-700 hover:text-blue-600 font-semibold">Get Started</a>
        <a href="#features" class="block py-2 text-gray-700 hover:text-blue-600 font-semibold">Features</a>
        <a href="#discover" class="block py-2 text-gray-700 hover:text-blue-600 font-semibold">Discover</a>
        <a href="#about" class="block py-2 text-gray-700 hover:text-blue-600 font-semibold">About</a>
        <a href="/auth/login" class="block py-2 bg-green-600 text-white rounded text-center mt-2">Login</a>
        <a href="/auth/register" class="block py-2 bg-blue-600 text-white rounded text-center mt-2">Register</a>
    </div>
</nav>


<!-- Page Content --> 
<main class="flex flex-col min-h-screen bg-white text-gray-800 snap-y snap-mandatory overflow-y-scroll scroll-smooth">
    <!-- Section 1: Hero -->
    <section id="hero" class="flex flex-col min-h-screen bg-bgSoft snap-start">
        <div class="flex flex-1 items-start justify-center pt-16 px-10">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                <!-- Image and CTA -->
                <div class="flex flex-col items-start space-y-12">
                    <img src="/Images/business-plan.svg" alt="FastaBiz Image" class="w-fit max-w-md">
                    <a href="#get-started" class="bg-blue-600 text-white font-semibold px-6 py-3 rounded hover:bg-blue-700">Get Started</a>
                </div>

                <!-- Right: Description -->
                <div>
                    <h1 class="text-4xl font-bold mb-4">Simplify Logistics & Inventory</h1>
                    <p class="text-gray-600 text-lg">
                        FastaBiz helps businesses streamline inventory, deliveries, and customer orders — all in one platform. Whether you’re a farmer, producer, or everyday buyer, we’ve got you covered.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Section 2: Step-by-step Process -->
    <section id="get-started" class="min-h-screen flex flex-col bg-white px-10 snap-start">
        <h2 class="text-4xl font-bold text-center mb-4 mt-6 text-gray-800">How It Works</h2>

        <!-- Step 1 -->
        <div class="grid grid-cols-2 items-center mb-10">
            <div class="">
                <h3 class="text-2xl font-semibold text-blue-700 mb-4">Step 1: Sign Up</h3>
                <p class="text-gray-600 leading-relaxed">
                    Register as a business owner to manage inventory and receive a custom store link, 
                    or join as a customer to explore products.
                </p>
            </div>
            <div class="flex justify-center items-center">
                <img src="/Images/sign-up.svg" alt="Sign Up Image" class="w-1/4 max-w-sm">
            </div>
        </div>

        <!-- Step 2 -->
        <div class="grid grid-cols-2 md:grid-cols-2 mb-10">
            <div class="justify-center flex">
                <img src="/Images/content-structure.svg" alt="Shop Structure Image" class="w-1/4 max-w-sm">
            </div>
            <div class="flex justify-center text-start">
                <h3 class="text-2xl font-semibold text-blue-700 mb-4">Step 2: Create & Shop</h3>
                <p class="text-gray-600 leading-relaxed">
                    Business owners upload their inventory, while customers use shared links to browse and place orders with ease.
                </p>
            </div>
        </div>

        <!-- Step 3 -->
        <div class="grid grid-cols-2 md:grid-cols-2 items-center gap-12">
            <div>
                <h3 class="text-2xl font-semibold text-blue-700 mb-4">Step 3: Manage</h3>
                <p class="text-gray-600 leading-relaxed">
                    Admins manage deliveries, drivers, and feedback. Customers can track orders, share reviews, and manage their carts.
                </p>
            </div>
            <div class="flex justify-center">
                <img src="/Images/done-checking.svg" alt="Manage Image" class="w-1/4 max-w-sm">
            </div>
        </div>
    </section>

    <!-- Section 3: Features & Tools -->
    <LandingUserFeatures />

    <!-- Section 4: Discover Stores -->
    <LandingStoreFeatures />

    <!-- Section 5: Testimonials / About / Footer -->
    <section id="about" class="min-h-screen px-0 section-spacing bg-white">
        <div class="grid grid-cols-2">
            <!-- Image -->
            <div class="flex items-center justify-center mt-10">
                <img src="/Images/testimonials.svg" alt="Testimonials Image" class="w-1/3 max-w-sm">
            </div>

            <!-- Citations -->
            <div>
                <h2 class="text-3xl font-bold text-center mb-6 mt-10">Why Users Love Us</h2>
                <div class="grid md:grid-cols-2 gap-10 text-center">
                    <div>
                        <p class="italic">"FastaBiz transformed how I manage farm produce and delivery schedules. It's seamless!"</p>
                        <p class="mt-2 font-semibold">– Farmer A</p>
                    </div>
                    <div>
                        <p class="italic">"It’s easy to order, track, and recommend products to friends. Super intuitive!"</p>
                        <p class="mt-2 font-semibold">– Customer B</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex flex-col mt-10 text-center">
            <h3 class="text-xl font-semibold mb-2">About FastaBiz</h3>
            <p class="text-gray-600 max-w-xl mx-auto">
                We help bridge the gap between small businesses and their customers. From smart inventories to real-time logistics, FastaBiz is designed for impact.
            </p>
            <div class="flex justify-center mt-4">
                <img src="/Images/team-spirit.svg" alt="About Us Image" class="w-1/5 max-w-sm">
            </div>    
        </div>

        <footer class="w-full bg-gray-200 text-gray-600 py-8 mt-8">
            <div class="max-w-screen-xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center text-sm">
                <p class="mb-2 md:mb-0">&copy; 2025 <span class="font-semibold text-gray-800">FastaBiz</span>. All rights reserved.</p>
                
                <div class="flex space-x-4">
                    <a href="/privacy" class="hover:text-gray-800 transition">Privacy Policy</a>
                    <a href="/terms" class="hover:text-gray-800 transition">Terms</a>
                    <a href="/contact" class="hover:text-gray-800 transition">Contact</a>
                </div>
            </div>
        </footer>
    </section>
</main>

