@page "/createorder"
@using logistics_frontend.Models
@inject OrderService OrderService
@inject NavigationManager Navigation

<h3>Create New Order</h3>

<EditForm Model="@order" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="">Product Name</label>
        <InputText class="form-control" @bind-Value="order.ProductName" />
    </div>

    <div class="mb-3">
        <label for="">Quantity</label>
        <InputNumber class="form-control" @bind-Value="order.Quantity" />
    </div>

    <div class="mb-3">
        <label for="">Address</label>
        <InputText class="form-control" @bind-Value="order.Address" />
    </div>

    <button type="submit" class="btn btn-primary">Submit Order</button>

</EditForm>

@code {
    private OrderItem order = new();

    private void HandleValidSubmit ()
    {
        OrderService.AddOrder(order);

        Navigation.NavigateTo("/orders");
    }
}