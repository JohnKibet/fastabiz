@page "/admin/reports"
@layout MainLayout
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager Navigation
@attribute [Authorize(Roles = "admin")]

<div class="space-y-8">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <h2 class="text-2xl font-bold text-gray-800">ðŸ“Š Delivery & Revenue Reports</h2>
        <button class="px-4 py-2 bg-blue-600 text-white text-sm rounded-lg shadow hover:bg-blue-700">
            Export PDF
        </button>
    </div>

    <!-- Time Filter -->
    <div class="flex gap-4 items-center">
        <label class="text-sm font-medium text-gray-600">Filter by:</label>
        <select class="border rounded px-3 py-1 text-sm">
            <option>This Week</option>
            <option>This Month</option>
            <option>Last 3 Months</option>
            <option>Year to Date</option>
        </select>
    </div>

    <!-- Delivery Performance Breakdown -->
    <div class="bg-white rounded-2xl shadow p-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Delivery Performance</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
                <p class="text-sm text-gray-500">Completed Deliveries</p>
                <p class="text-2xl font-bold text-green-600">110</p>
                <p class="text-xs text-gray-400">+8% vs last week</p>
            </div>
            <div>
                <p class="text-sm text-gray-500">In Transit</p>
                <p class="text-2xl font-bold text-blue-600">7</p>
                <p class="text-xs text-gray-400">Stable</p>
            </div>
            <div>
                <p class="text-sm text-gray-500">Delayed</p>
                <p class="text-2xl font-bold text-red-600">3</p>
                <p class="text-xs text-gray-400">-2 vs last week</p>
            </div>
        </div>

        <div class="mt-6">
            <!-- Chart placeholder -->
            <div class="h-56 bg-gray-100 rounded-lg flex items-center justify-center text-gray-400">
                Delivery trend chart (coming soon)
            </div>
        </div>
    </div>

    <!-- Revenue Section -->
    <div class="bg-white rounded-2xl shadow p-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Revenue Analysis</h3>
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500">Total Revenue (This Month)</p>
                <p class="text-2xl font-bold text-gray-800">$4,200</p>
                <p class="text-xs text-gray-400">+12% vs last month</p>
            </div>
            <div>
                <p class="text-sm text-gray-500">Average Order Value</p>
                <p class="text-2xl font-bold text-gray-800">$120</p>
            </div>
        </div>
        <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="h-48 bg-gray-100 rounded-lg flex items-center justify-center text-gray-400">
                Revenue by week chart
            </div>
            <div class="h-48 bg-gray-100 rounded-lg flex items-center justify-center text-gray-400">
                Revenue by category chart
            </div>
        </div>
    </div>

    <!-- Detailed Table -->
    <div class="bg-white rounded-2xl shadow p-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Recent Deliveries & Payments</h3>
        <table class="w-full text-sm text-left border-collapse">
            <thead>
                <tr class="bg-gray-50">
                    <th class="px-4 py-2 border">Order ID</th>
                    <th class="px-4 py-2 border">Customer</th>
                    <th class="px-4 py-2 border">Status</th>
                    <th class="px-4 py-2 border">Amount</th>
                    <th class="px-4 py-2 border">Date</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="px-4 py-2 border">ORD102</td>
                    <td class="px-4 py-2 border">Jane Smith</td>
                    <td class="px-4 py-2 border text-green-600">Completed</td>
                    <td class="px-4 py-2 border">$150</td>
                    <td class="px-4 py-2 border">Sep 10, 2025</td>
                </tr>
                <tr>
                    <td class="px-4 py-2 border">ORD103</td>
                    <td class="px-4 py-2 border">John Doe</td>
                    <td class="px-4 py-2 border text-blue-600">In Transit</td>
                    <td class="px-4 py-2 border">$200</td>
                    <td class="px-4 py-2 border">Sep 11, 2025</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

