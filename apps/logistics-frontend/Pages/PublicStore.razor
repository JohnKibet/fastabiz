@page "/store/{Slug}"
@layout PublicLayout
@inject StoreService StoreService
@inject InventoryService InventoryService
@using logistics_frontend.Models.Store

<h2 class="text-2xl font-bold">@store?.Name</h2>

@if (store == null)
{
    <p>No store found.</p>
}
else
{
    <div class="mb-6">
        <p>@store.Description</p>
    </div>

    @if (inventories?.Any() == true)
    {
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            @foreach (var inv in inventories)
            {
                <div class="border rounded-lg shadow-sm p-4">
                    <p class="text-sm text-gray-600">@inv.Category</p>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-gray-500">No products available yet.</p>
    }
}

@code {
    [Parameter] public string? Slug { get; set; }
    private Store? store;
    private List<Inventory> inventories = new();

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrWhiteSpace(Slug))
        {
            store = await StoreService.GetStoreBySlug(Slug);
            if (store != null)
            {
                var result = await InventoryService.GetInventoriesByStore(store.ID);
                if (result.Success && result.Data != null)
                {
                    inventories = result.Data;
                }
                else
                {
                    inventories = new List<Inventory>();
                }
            }
        }
    }
}
