@using frontend.Models
@using frontend.Pages.Shared.Components.Icons
@namespace frontend.Pages.Shared.Components.Cart
@inject CartService CartService
@inject NavigationManager Nav

<div class="space-y-4">
    @foreach (var item in CartService.Items)
    {
        <div class="p-4 border rounded-lg bg-white shadow-sm hover:bg-gray-50 transition-all flex gap-4">

            <!-- Product Image -->
            <img src="@item.Thumbnail"
                 class="w-20 h-20 rounded-md object-cover shadow-sm" />

            <div class="flex-1">
                <!-- Name + Variant -->
                <div class="flex justify-between items-start">
                    <div>
                        <p class="font-semibold text-gray-900">@item.Name</p>

                        @* Variant name with a link to change *@
                        @if (!string.IsNullOrEmpty(item.VariantName))
                        {
                            <p class="text-sm text-gray-500">
                                <span class="font-medium">@item.VariantName</span>
                                <span class="text-blue-600 cursor-pointer hover:underline ml-2"
                                @onclick='() => Nav.NavigateTo($"/product/{item.ProductId}?variantId={item.VariantId}")'>
                                    change
                                </span>
                            </p>
                        }
                    </div>

                    <!-- Remove -->
                    <button class="text-gray-400 hover:text-red-500"
                            title="Remove item"
                            @onclick="() => Remove(item)">
                        <LucideIcon Name="close" Size="5" />
                    </button>
                </div>

                @* Short description snippet *@
                @if (!string.IsNullOrEmpty(item.Description))
                {
                    <p class="text-xs text-gray-500 mt-1 line-clamp-2">
                        @item.Description
                    </p>
                }

                <!-- Quantity + Price Row -->
                <div class="flex justify-between items-center mt-3">
                    
                    <!-- Quantity Controls -->
                    <div class="flex items-center gap-2">
                        <button class="px-2 py-1 border rounded hover:bg-gray-100"
                                @onclick="() => Decrement(item)">-</button>
                        <span class="font-semibold w-6 text-center">@item.Quantity</span>
                        <button class="px-2 py-1 border rounded hover:bg-gray-100"
                                @onclick="() => Increment(item)">+</button>
                    </div>

                    <!-- Price -->
                    <p class="font-bold text-gray-800">
                        @((item.Price * item.Quantity).ToString("0.00"))
                    </p>
                </div>

                <!-- View details -->
                <p class="text-sm mt-1">
                    <span class="text-blue-600 hover:underline cursor-pointer"
                          @onclick='() => Nav.NavigateTo($"/product/{item.ProductId}")'>
                        View details
                    </span>
                </p>
            </div>
        </div>
    }

    <!-- Total -->
    <div class="p-4 border rounded-lg bg-white shadow-sm flex justify-between font-bold text-lg">
        <span>Total:</span>
        <span>@CartService.Items.Sum(i => i.Price * i.Quantity).ToString("0.00")</span>
    </div>
</div>

@code {
    private async Task Remove(CartItem item)
    {
        await CartService.RemoveItem(item.ProductId, item.VariantId);
    }
    
    private async Task Increment(CartItem item)
    {
        await CartService.IncrementItem(item);
    }

    private async Task Decrement(CartItem item)
    {
        await CartService.DecrementItem(item);
    }
}
