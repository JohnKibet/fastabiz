@using Microsoft.AspNetCore.Components

<div class="bg-white border rounded-lg shadow-sm p-4 @Class">
    <h3 class="text-md font-semibold text-gray-700 mb-4 flex items-center gap-2">
        @if (!string.IsNullOrWhiteSpace(Icon))
        {
            <i class="fas fa-@Icon text-orange-500"></i>
        }
        @Title
    </h3>

    @ChildContent
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Icon { get; set; } = ""; // Optional: "map", "bell", etc.
    [Parameter] public string Class { get; set; } = ""; // Optional extra styles
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
