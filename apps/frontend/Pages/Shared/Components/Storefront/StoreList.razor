@page "/stores"
@using frontend.Models
@namespace frontend.Pages.Shared.Components.Storefront
@inject NavigationManager NavigationManager

<h3 class="text-2xl font-bold mb-6">All Stores</h3>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    @foreach (var merchant in Merchants)
    {
        <MerchantCard Merchant="@merchant" OnSelected="@NavigateToStore" />
    }
</div>

@code {
    // For now, use mock data
    private List<Merchant> Merchants = MockData.Merchants;

    private void NavigateToStore(Merchant merchant)
    {
        NavigationManager.NavigateTo($"/store/{merchant.Id}");
    }
}
