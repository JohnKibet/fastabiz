@using frontend.Models.Order

<table class="min-w-full table-auto text-sm text-left text-gray-700">
    <thead class="bg-gray-50 text-xs uppercase text-gray-500 border-b">
        <tr>
            <th class="px-4 py-3">No.</th>
            <th class="px-4 py-3">Customers</th>
            <th class="px-4 py-3">Quantity</th>
            <th class="px-4 py-3">Inventory</th>
            <th class="px-4 py-3">Pickup</th>
            <th class="px-4 py-3">Delivery</th>
            <th class="px-4 py-3">Status</th>
            <th class="px-4 py-3">Created At</th>
            <th class="px-4 py-3 text-right">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (PagedOrders?.Any() == true)
        {
            @foreach (var (order, index) in PagedOrders.Select((o, i) => (o, i)))
            {
                <tr class="border-b hover:bg-gray-50">
                    <td class="px-4 py-2">@((index + 1) + (CurrentPage - 1) * PageSize)</td>
                    <td class="px-4 py-2">
                        @CustomerNames.GetValueOrDefault(order.CustomerID, "Customer")
                    </td>
                    <td class="px-4 py-2">@order.Quantity</td>
                    <td class="px-4 py-2">
                        @InventoryCategories.GetValueOrDefault(order.InventoryID, "Uknown")
                    </td>
                    <td class="px-4 py-2">@order.PickupAddress</td>
                    <td class="px-4 py-2">@order.DeliveryAddress</td>
                    <td class="px-4 py-2">
                        <span class="@GetStatusClass(order.Status.ToString())">
                            @order.Status
                        </span>
                    </td>
                    <td class="px-4 py-2">@order.CreatedAt.ToString("g")</td>
                    <td class="px-4 py-2 text-right">
                        <TableRowActions
                            ColumnValueId="@order.ID"
                            OnView="OnView"
                            OnEdit="OnEdit"
                            OnDelete="OnDelete"
                        />
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center text-gray-500 py-4">No orders found.</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter] public List<Order> PagedOrders { get; set; } = new();
    [Parameter] public Dictionary<Guid, string> CustomerNames { get; set; } = new();
    [Parameter] public Dictionary<Guid, string> InventoryCategories { get; set; } = new();
    [Parameter] public int CurrentPage { get; set; }
    [Parameter] public int PageSize { get; set; }

    [Parameter] public EventCallback<Guid> OnView { get; set; }
    [Parameter] public EventCallback<Guid> OnEdit { get; set; }
    [Parameter] public EventCallback<Guid> OnDelete { get; set; }

    [Parameter] public Func<string?, string> GetStatusClass { get; set; } = status => "";
}  