@namespace frontend.Pages.Shared.Components.Modals
@using System.ComponentModel.DataAnnotations
@using frontend.Pages.Shared.Components.Inputs

@if (Show)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-2xl p-6 shadow-xl w-96">

            <h3 class="text-xl font-semibold text-gray-800 mb-4">Change Password</h3>

            <EditForm Model="@Model" OnValidSubmit="@Submit">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="text-sm text-gray-700">Current Password</label>
                    <PasswordInput 
                        Value="@Model.CurrentPassword"
                        ValueChanged="((string v) => Model.CurrentPassword = v)"
                        ValueExpression="@(() => Model.CurrentPassword)" 
                        Placeholder="Current Password" />
                </div>

                <div class="mb-3">
                    <label class="text-sm text-gray-700">New Password</label>
                    <PasswordInput 
                        Value="@Model.NewPassword"
                        ValueChanged="((string v) => Model.NewPassword = v)"
                        ValueExpression="@(() => Model.NewPassword)" 
                        Placeholder="New Password" />
                </div>

                <div class="mb-4">
                    <label class="text-sm text-gray-700">Confirm Password</label>
                    <PasswordInput 
                        Value="@Model.ConfirmPassword"
                        ValueChanged="((string v) => Model.ConfirmPassword = v)"
                        ValueExpression="@(() => Model.ConfirmPassword)" 
                        Placeholder="Confirm Password" />
                </div>

                <div class="flex justify-between space-x-3">
                    <button type="button"
                            class="px-4 py-2 rounded bg-gray-300 hover:bg-gray-400"
                            @onclick="Close">
                        Cancel
                    </button>

                    <button 
                        type="submit"
                        class="px-4 py-2 rounded bg-blue-600 hover:bg-blue-700 text-white">
                        Update Password
                    </button>
                </div>
            </EditForm>

        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }

    [Parameter] public ChangePasswordModel Model { get; set; } = new();

    [Parameter] public EventCallback OnSubmit { get; set; }

    private async Task Submit()
    {
        await OnSubmit.InvokeAsync();
    }

    private async Task Close()
    {
        await ShowChanged.InvokeAsync(false);
    }
}
