        new StoreDto { Name = "FreshMart", Category = "Food & Beverage", Slug="freshmart", LogoUrl="/images/stores/freshmart.png", Description="Organic produce and groceries from local farmers." },
        new StoreDto { Name = "TechWorld", Category = "Electronics", Slug="techworld", LogoUrl="/images/stores/techworld.png", Description="Latest gadgets and accessories for modern life." },
        new StoreDto { Name = "UrbanWear", Category = "Fashion", Slug="urbanwear", LogoUrl="/images/stores/urbanwear.png", Description="Trendy clothing and streetwear for young professionals." },
    };

    class StoreDto
    {
        public string Name { get; set; }
        public string Slug { get; set; }
        public string Category { get; set; }
        public string LogoUrl { get; set; }
        public string Description { get; set; }
    }
}
