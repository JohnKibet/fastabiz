@namespace frontend.Pages.Shared.Components.SummaryCard
@using Microsoft.AspNetCore.Components

<div class="p-4 rounded-xl shadow-sm bg-white flex flex-col justify-between">
    <div class="text-xs font-semibold text-gray-500">@Title</div>

    <div class="mt-2 text-2xl font-bold">@Value</div>

    @if (!string.IsNullOrEmpty(Subtle))
    {
        <div class="mt-1 text-sm text-gray-400">@Subtle</div>
    }
</div>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public int Value { get; set; }

    [Parameter]
    public string? Subtle { get; set; }
}